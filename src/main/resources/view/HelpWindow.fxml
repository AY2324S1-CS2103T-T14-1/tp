<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>
      <VBox fx:id="helpMessageContainer" prefHeight="631.0" prefWidth="763.0" style="-fx-background-color: #FFFFFF;">
        <children>
          <HBox prefHeight="852.0" prefWidth="901.0">
            <children>
              <Label fx:id="commandSummary" text="Label" wrapText="true">
                <font>
                  <Font size="13.0" />
                </font>
                        <padding>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
              </Label>
            </children>
          </HBox>
          <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #c5d4eb;">
            <children>
              <Label fx:id="helpMessage" alignment="BOTTOM_LEFT" prefHeight="19.0" prefWidth="782.0" text="Label" HBox.hgrow="ALWAYS">
                <HBox.margin>
                  <Insets right="5.0" />
                </HBox.margin>
                <font>
                  <Font size="13.0" />
                </font>
                        <padding>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
              </Label>
              <Button fx:id="copyButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#copyUrl" prefHeight="29.0" prefWidth="173.0" text="Copy URL" textFill="WHITE" HBox.hgrow="ALWAYS">
                <font>
                  <Font size="13.0" />
                </font>
              </Button>
            </children>
          </HBox>
        </children>
      </VBox>
    </Scene>
  </scene>
</fx:root>
